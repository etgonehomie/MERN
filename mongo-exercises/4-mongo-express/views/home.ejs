<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/app.css" />
    <title>Inventory</title>
  </head>
  <body>
    <h1>Inventory</h1>

    <!-- IF there is inventory then...  -->
    <% if (products) { %>
    <!-- Create a table with header: Name | Price | Quantity | Picture  -->
    <div class="container">
      <table
        id="product-table"
        class="table table-striped table-hover table-sm"
      >
        <thead class="thead-dark">
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Category</th>
          </tr>
        </thead>
        <tbody id="product-entries">
          <!-- For each item in the db add a row  -->
          <% for(p of products) { %>
          <tr id="<%= p._id %>">
            <td><%= p.name %></td>
            <td><%= p.price %></td>
            <td><%= p.category %></td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
    <% } %> <%- include ('partials/js-scripts') %>
  </body>
</html>
