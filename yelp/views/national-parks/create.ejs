<%- layout('./templates/boilerplate') %>
<h1 class="text-center">Create a new park</h1>
<div class="d-flex justify-content-center">
  <form
    class="col-6 row g-3 mt-3 needs-validation"
    action="/national-parks"
    method="POST"
    novalidate
  >
    <!-- Park Name -->
    <div class="col-md-6">
      <label for="title" class="form-label">Park Name</label>
      <input
        type="text"
        class="form-control"
        id="title"
        name="park[title]"
        placeholder="Green Grassy Hill"
        required
      />
    </div>

    <!-- Park Location -->
    <div class="col-md-6">
      <label for="location" class="form-label">Location</label>
      <input
        type="text"
        class="form-control"
        id="location"
        name="park[location]"
        placeholder="City, State"
        required
      />
    </div>

    <!-- Description -->
    <div class="col-12">
      <label for="description" class="form-label">Description</label>
      <textarea
        class="form-control"
        name="park[description]"
        id="description"
        required
      ></textarea>
    </div>

    <!-- Park Pricing -->
    <div class="col-3">
      <label for="price" class="form-label">Unit Price</label>
      <div class="input-group">
        <div class="input-group-text">$</div>
        <input
          type="text"
          class="form-control"
          id="price"
          name="park[price]"
          placeholder="$0.00"
          required
        />
      </div>
    </div>

    <!-- Edit Park Picture -->
    <div class="col-9">
      <label for="imageURL" class="form-label">Image URL</label>
      <input
        type="url"
        class="form-control"
        id="imageURL"
        name="park[imageURL]"
        placeholder="Image URL here"
        required
      />
    </div>

    <!-- Save park changes -->
    <div class="col-12">
      <button type="submit" class="btn btn-primary">Create</button>
    </div>
  </form>
</div>

<div class="text-center mt-3">
  <a href="/national-parks">Back to List</a>
</div>
