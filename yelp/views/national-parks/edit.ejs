<%- layout('./templates/boilerplate') %>
<h1>Create a new park</h1>
<form action="/national-parks/<%= park._id %>?_method=PUT" method="POST">
  <!-- Set a park name -->
  <label for="title">Park Name</label>
  <input type="text" id="title" name="title" value="<%= park.title %>" />

  <!-- Set a park location -->
  <label for="location">Location</label>
  <input
    type="text"
    id="location"
    name="location"
    value="<%= park.location %>"
  />
  <button>Submit</button>
</form>
<a href="/national-parks">List of Parks</a>
