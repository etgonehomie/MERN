<%- layout('./templates/boilerplate') %>
<h1 class="text-center">Edit park</h1>
<p class="text-center"><a href="/national-parks">List of Parks</a></p>
<div class="d-flex justify-content-center">
  <form
    class="row g-3 needs-validation col-6"
    action="/national-parks/<%= park._id %>?_method=PUT"
    method="POST"
    novalidate
  >
    <!-- Edit Park Name -->
    <div class="col-md-6">
      <label for="title" class="form-label">Park Name</label>
      <input
        type="text"
        class="form-control"
        id="title"
        name="park[title]"
        value="<%= park.title %>"
        required
      />
    </div>

    <!-- Edit Park Location -->
    <div class="col-md-6">
      <label for="location" class="form-label">Location</label>
      <input
        type="text"
        class="form-control"
        id="location"
        name="park[location]"
        value="<%= park.location %>"
        required
      />
    </div>

    <!-- Edit Park Description -->
    <div class="col-12">
      <label for="description" class="form-label">Description</label>
      <textarea
        class="form-control"
        name="park[description]"
        id="description"
        required
      >
<%=park.description%></textarea
      >
    </div>

    <!-- Edit Park Pricing -->
    <div class="col-sm-4 col-md-3 col-lg-2">
      <label for="price" class="form-label">Unit Price</label>
      <div class="input-group col-3">
        <div class="input-group-text">$</div>
        <input
          type="text"
          class="form-control"
          id="price"
          name="park[price]"
          value="<%= park.price %>"
          required
        />
      </div>
    </div>

    <!-- Edit Park Picture -->
    <div class="col-sm-12 col-md-9 col-lg-10">
      <label for="imageURL" class="form-label">Image URL</label>
      <input
        type="url"
        class="form-control"
        id="imageURL"
        name="park[imageURL]"
        placeholder="Image link here"
        value="<%= park.imageURL %>"
        required
      />
    </div>

    <img
      class="col-12 mt-4 card-img"
      src="<%= park.imageURL %>"
      alt="random-park"
    />

    <!-- Save park changes -->
    <div class="col-12">
      <button type="submit" class="btn btn-primary">Save</button>
      <%- include('../partials/deletePark', {_id: park._id}) %>
    </div>
  </form>
</div>
